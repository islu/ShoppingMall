<h1 class="nes-text is-primary">商品列表</h1>

<%= link_to "新增商品", new_product_path, class: "nes-btn is-primary" %>
<%= link_to "購物車", cart_path, class: "nes-btn is-success" %>

<div class="nes-table-responsive">
	<table class="nes-table is-bordered is-centered">
		<thead>
			<tr>
				<td>商品名稱</td>
				<td>售價</td>
				<td>說明</td>
				<td>處理</td>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
			<tr>
				<td>
					<%= link_to "放到購物車", add_cart_path(product), method: "post", class: "nes-btn is-error" %>
					<%= product.title %>
				</td>
				<td><%= product.price %></td>
				<td><%= product.description %></td>
				<td>
					<%= link_to "編輯", edit_product_path(product), class: "nes-btn" %>
					<%= link_to "刪除", product, method: "delete", data: { confirm: "確定刪除?" }, class: "nes-btn" %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>